pipeline {
	agent {
       		docker {
            		image 'maven:3-alpine' 
            		args '-v ~/.m2:/root/.m2' 
       		 }
   	 }
	stages {
		stage("Release") {
            		steps {
                		sh "mvn -Dmaven.javadoc.skip=true -B release:prepare"
                		sh "mvn -Dmaven.javadoc.skip=true -B release:perform"
			}
        	}
		stage("Clean WorkSpace"){
			steps {
				cleanWs()
			}	
		}
		
	}
}
